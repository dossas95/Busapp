<body bgcolor="#696969">
  <header class="header">
    <h1> Registrar Bus </h1>
  </header>
  <form>
    <br>
    <p> 
    <input class="campo" type="text" id="placa" onfocus="if (this.value=='Placa del vehículo') this.value = ' '" onblur="if (this.value==' ') this.value = 'Nombre completo'" value="Nombre completo" size="80">
    </p>
    <p> 
    <input class="campo" type="text" id="marca" onfocus="if (this.value=='Marca') this.value = ' '" onblur="if (this.value==' ') this.value = 'Cédula'" value="Cédula" size="80">
    </p> <p> 
    <input class="campo" type="text" id="modelo" onfocus="if (this.value=='Modelo') this.value = ''; this.type='password'" onblur="if (this.value=='') {this.value = 'Contraseña'; this.type = 'text';} else{this.type='password'}" value="Contraseña" size="80">
    </p>
    
    <p>Seleccione la fecha de la última revisión
      <input class="campo" type="date" id="fr"></p>
    <div class="menu">
      <button class="mid" {{action 'registrar'}}>Finalizar registro</button>
      {{#each cedulas as | cedula |}}
        {{cedula.nombre}}
        {{cedula.telefono}}
      {{/each}}
    </div>
  </form>
</body>
{{outlet}}